@model MVCLIBRARY.Models.Entity.TBL_CATEGORY
@{
    ViewBag.Title = "CategoryGet";
    Layout = "~/Views/Shared/Layout.cshtml";
}



@using (Html.BeginForm("CategoryUpdate", "Category", FormMethod.Post))
{
    <div style="margin-bottom:15px"></div>
    <div class="form-group">
        @*-----------------------------------------------------------------------------------------------*@
        <div style="margin-bottom:15px">
            @Html.HiddenFor(m => m.ID)
        </div>


        <div style="margin-bottom:15px">
            <label>Kategori Adı</label>
            @Html.TextBoxFor(category => category.NAME, new { @class = "form-control" }) @*kategori adı için textbox*@
        </div>
    </div>
    @*-----------------------------------------------------------------------------------------------*@
    <div>
        <button class="btn btn-warning">GÜNCELLE</button>  @*güncelle butonu*@
    </div>
    @*-----------------------------------------------------------------------------------------------*@
}








@*bu BeginForm KategoriGüncelle ActionResult ını kapsasın.
    Güncelle ActionResult ı Kategori Controller ı içinde.
    Bu metot formumuz post olduğunda çalışacak.*@