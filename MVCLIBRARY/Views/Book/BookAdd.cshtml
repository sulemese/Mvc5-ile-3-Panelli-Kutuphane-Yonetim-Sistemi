@model MVCLIBRARY.Models.Entity.TBL_BOOK
@{
    ViewBag.Title = "BookAdd";
    Layout = "~/Views/Shared/Layout.cshtml";
}
<form class="form-group" method="post">
    <div style="margin-top:15px">
        <label>Kitap Adı</label>
        @Html.TextBoxFor(book => book.NAME, new { @class = "form-control" })
    </div>
    <div style="margin-top:15px">
        <label>Yazarı</label>
        @Html.DropDownListFor(book => book.TBL_AUTHOR.ID, (List<SelectListItem>)ViewBag.dgr2, new { @class = "form-control" })
    </div>
    <div style="margin-top:15px">
        <label>Kategorisi</label>
        @Html.DropDownListFor(book => book.TBL_CATEGORY.ID, (List<SelectListItem>)ViewBag.dgr1, new { @class = "form-control" })
    </div>

    <div style="margin-top:15px">
        <label>Basım Yılı</label>
        @Html.TextAreaFor(book => book.PRINTYEAR, new { @class = "form-control" })
    </div>
    <div style="margin-top:15px">
        <label>Yayınevi</label>
        @Html.DropDownListFor(book => book.TBL_PUBLISHER.ID, (List<SelectListItem>)ViewBag.dgr3, new { @class = "form-control" })
    </div>
    <div style="margin-top:15px">
        <label>Sayfa Sayısı</label>
        @Html.TextAreaFor(book => book.PAGE, new { @class = "form-control" })
    </div>
    <div style="margin-top:15px">
        <label>Dili</label>
        @Html.DropDownListFor(book => book.TBL_LANGUAGE.ID, (List<SelectListItem>)ViewBag.dgr4, new { @class = "form-control" })
    </div>
    <div style="margin-top:15px">
        <label>Bulunduğu Kütüphane</label>
        @Html.DropDownListFor(k => k.TBL_LIBRARY.ID, (List<SelectListItem>)ViewBag.dgr5, new { @class = "form-control" })
    </div>
    @*-------------------------------------------------------------------------------------------------------------------------------*@
    <div style="margin-top:15px">
        <button class="btn btn-info" id="Btn1">KİTAP EKLE</button>
    </div>
    @*--------------------------------------------------------------------------------------------------------------------------------*@
    <input type="hidden" name="STATUS" value="True" /> @*durum bilgisini klavyeden almayacağımız için kütüphaneye eklenen her kitap true olsun fakat hidden tipli yani gizli olsun.*@
    @*--------------------------------------------------------------------------------------------------------------------------------*@
</form>


