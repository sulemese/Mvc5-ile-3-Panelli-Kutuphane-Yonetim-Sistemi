@model MVCLIBRARY.Models.Entity.TBL_AUTHOR
@{
    ViewBag.Title = "AuthorGet";
    Layout = "~/Views/Shared/Layout.cshtml";
}
@using (Html.BeginForm("AuthorUpdate", "Author", FormMethod.Post))
{
    <div style="margin-bottom:15px"></div>
    <div class="form-group">

        <div style="margin-bottom:15px">
            @Html.HiddenFor(m => m.ID)
        </div>

        <div style="margin-bottom:15px">
            <label>Yazar Adı</label>
            @Html.TextBoxFor(author => author.NAME, new { @class = "form-control" })
        </div>

        <div style="margin-bottom:15px">
            <label>Soyadı</label>
            @Html.TextBoxFor(author => author.SURNAME, new { @class = "form-control" })
        </div>

        <div style="margin-bottom:15px">
            <label>Detay Bilgileri</label>
            @Html.TextAreaFor(author => author.DETAIL, new { @class = "form-control" })
        </div>

        <button class="btn btn-warning">YAZAR BİLGİLERİNİ GÜNCELLE</button>
    </div>
}

