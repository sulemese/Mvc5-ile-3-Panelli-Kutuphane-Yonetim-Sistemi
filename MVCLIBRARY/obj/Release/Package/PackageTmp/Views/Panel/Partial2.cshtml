@model MVCLIBRARY.Models.Entity.TBL_USER


<div class="tab-pane" id="settings">

    @using (Html.BeginForm("Index2", "Panel", FormMethod.Post))

    {

        <form class="form-horizontal">

            <div class="form-group row">

                <label for="inputName" class="col-sm-2 col-form-label">Ad</label>

                <div class="col-sm-10">

                    @Html.TextBoxFor(x => x.NAME, new { @class = "form-control" })

                </div>

            </div>

            <div class="form-group row">

                <label for="inputName" class="col-sm-2 col-form-label">Soyad</label>

                <div class="col-sm-10">

                    @Html.TextBoxFor(x => x.SURNAME, new { @class = "form-control" })

                </div>

            </div>

            <div class="form-group row">

                <label for="inputName" class="col-sm-2 col-form-label">Kullanıcı Adı</label>

                <div class="col-sm-10">

                    @Html.TextBoxFor(x => x.USERNAME, new { @class = "form-control" })

                </div>

            </div>

            <div class="form-group row">

                <label for="inputName" class="col-sm-2 col-form-label">Şifre</label>

                <div class="col-sm-10">

                    @Html.TextBoxFor(x => x.PASSWORD, new { @class = "form-control" })

                </div>

            </div>

            <div class="form-group row">

                <label for="inputName" class="col-sm-2 col-form-label">Fotoğraf</label>

                <div class="col-sm-10">

                    @Html.TextBoxFor(x => x.PHOTOGRAPH, new { @class = "form-control" })

                </div>

            </div>

            <div class="form-group row">

                <label for="inputName" class="col-sm-2 col-form-label">Okul</label>

                <div class="col-sm-10">

                    @Html.TextBoxFor(x => x.SCHOOL, new { @class = "form-control" })

                </div>

            </div>

            <div class="form-group row">

                <div class="offset-sm-2 col-sm-10">

                    <div class="checkbox">

                        <label>

                            <input type="checkbox"> Şartları okudum <a href="#">kabul ediyorum</a>

                        </label>

                    </div>

                </div>

            </div>

            <div class="form-group row">

                <div class="offset-sm-2 col-sm-10">

                    <button type="submit" class="btn btn-danger">Güncelle</button>

                </div>

            </div>

        </form>

    }

</div>