@model MVCLIBRARY.Models.Entity.TBL_DEPOSIT
@{
    ViewBag.Title = "DepositGive";
    Layout = "~/Views/Shared/Layout.cshtml";
}
<form class="form-group" method="post">
    <div style="margin-top:15px">
        <label>Üye Adı</label>
        @*@Html.TextBoxFor(deposit => deposit.USERID, new { @class = "form-control" })*@
        @Html.DropDownListFor(k=>k.TBL_USER.ID, (List<SelectListItem>)ViewBag.dgr1, new { @class = "form-control" })
    </div>
    <div style="margin-top:15px">
        <label>Kitap Adı</label>
        @*@Html.TextBoxFor(deposit => deposit.BOOKID, new { @class = "form-control" })*@
        @Html.DropDownListFor(k => k.TBL_BOOK.ID, (List<SelectListItem>)ViewBag.dgr2, new { @class = "form-control" })
    </div>
    <div style="margin-top:15px">
        <label>Personel Adı</label>
        @*@Html.TextBoxFor(deposit => deposit.EMPLOYEEID, new { @class = "form-control" })*@
        @Html.DropDownListFor(k => k.TBL_EMPLOYEE.ID, (List<SelectListItem>)ViewBag.dgr3, new { @class = "form-control" })
    </div>
    <div style="margin-top:15px">
        <label>Kütüphane Adı</label>
        @*@Html.TextBoxFor(deposit => deposit.LIBRARYID, new { @class = "form-control" })*@
        @Html.DropDownListFor(k => k.TBL_LIBRARY.ID, (List<SelectListItem>)ViewBag.dgr4, new { @class = "form-control" })
    </div>
    <div style="margin-top:15px">
        <label>Kitap Alma Tarihi</label>
        <input type="text" class="form-control" name="STARTTIME" value="@DateTime.Now.ToShortDateString()" />
    </div>
    <div style="margin-top:15px">
        <label>Kitap Verme Tarihi</label>
        <input type="text" class="form-control" name="ENDTIME" value="@DateTime.Now.AddDays(7).ToShortDateString()" />
    </div>
    <div style="margin-top:15px">
        <button class="btn btn-group" id="Btn1" style="background-color:#64d8ca; color: white">KİTABI ÖDÜNÇ VER</button>
    </div>
    <input type="hidden" value="False" name="TRANSACTIONSTATUS" /> @*değerin veritabanında null olmaması için eklenen her değer otomatik false gelsin.*@
</form>


